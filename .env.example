# MongoDB Configuration
MONGODB_URI=mongodb://admin:password@localhost:27017/cx?authSource=admin
DB_NAME=cx

# Environment
ENVIRONMENT=development

# Authentication
AUTH_SECRET=your-super-secret-key-change-in-production
REFRESH_TOKEN_SECRET=your-refresh-secret-key-change-in-production
COOKIE_SECURE=false
COOKIE_DOMAIN=localhost

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost"]

# AI Provider Configuration
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key
AI_PROVIDER=openai

# Feature Flags
ENABLE_MFA=false
ENABLE_OAUTH=false
ENABLE_LIVE_INTERVIEW=true
ENABLE_CAREER_TOOLS=true
ENABLE_RESUME_ANALYZER=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Security Settings
MAX_REQUEST_SIZE_MB=50
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15

# OAuth Settings
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Performance Settings
ENABLE_COMPRESSION=true
CACHE_RESPONSES=true
MAX_CONCURRENT_INTERVIEWS=1000

# Frontend
VITE_API_BASE=http://localhost:8000